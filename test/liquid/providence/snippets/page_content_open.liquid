{% include 'variables' %}
{% if has_sidebar %}
	{% assign span = 11 %}

	{% if settings.page_sidebar_side == 'right' %}
		{% assign sidebar_margin = '' %}
	{% else %}
		{% assign sidebar_margin = 'offset1' %}
	{% endif %}

{% else %}
	{% assign span = 12 %}
	{% assign sidebar_span = 0 %}
{% endif %}


<div class="span{{ span | minus: sidebar_span }} {{ sidebar_margin }}">
	<div id="content-primary">